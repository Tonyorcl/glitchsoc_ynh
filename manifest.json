{
    "name": "Glitch-SoCustom",
    "id": "glitchsocustom",
    "packaging_format": 1,
    "description": {
        "en": "A libre and federated social network, fork of Mastodon.",
        "fr": "Un réseau social libre et fédéré, scission de Mastodon."
    },
    "version": "2021-05-22~ynh2",
    "url": "https://github.com/Tonyorcl/mastodon/",
    "upstream": {
        "license": "free",
        "website": "https://glitch-soc.github.io/docs/",
        "code": "https://github.com/Tonyorcl/mastodon/"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "Tonyorcl"
    },
    "requirements": {
        "yunohost": ">= 4.2.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": [
                    "en_EN",
                    "fr_FR"
                ],
                "default": "fr_FR"
            }
        ]
    }
}
